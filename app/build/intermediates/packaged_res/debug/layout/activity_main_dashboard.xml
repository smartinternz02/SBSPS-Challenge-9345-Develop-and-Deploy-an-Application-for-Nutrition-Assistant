<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="8"
    android:columnCount="2"
    android:background="@drawable/woodback"
    tools:context=".MainDashboard">

    <ImageView
        android:layout_height="90dp"
        android:layout_width="200dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/home2"
        android:id="@+id/mg1"
        />
    <ImageView
        android:layout_height="90dp"
        android:layout_width="130dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/nutritionist1"
        android:id="@+id/mg2"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="Home"
        android:textSize="25dp"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Nutritionist"
        android:textSize="25dp"/>
    <ImageView
        android:layout_height="90dp"
        android:layout_width="200dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/dietition2"
        android:id="@+id/mg3"
        />
    <ImageView
        android:layout_height="90dp"
        android:layout_width="130dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/fitnesscenter"
        android:id="@+id/mg4"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="Dietitions"
        android:textSize="25dp"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Fitness Center"
        android:textSize="25dp"/>
    <ImageView
        android:layout_height="90dp"
        android:layout_width="200dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/dietplan"
        android:id="@+id/mg5"
        />
    <ImageView
        android:layout_height="90dp"
        android:layout_width="130dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/measure"
        android:id="@+id/mg6"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="Diet Chart"
        android:textSize="25dp"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Measure Food"
        android:textSize="25dp"/>

</GridLayout>